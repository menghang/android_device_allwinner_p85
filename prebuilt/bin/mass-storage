#!/system/xbin/bash

case "$1" in
    enable)
	echo "Enable Mass Storage"
	echo "/dev/block/vold/179:1" > /sys/class/android_usb/android0/f_mass_storage/lun/file
	echo "/dev/block/vold/93:64" > /sys/class/android_usb/android0/f_mass_storage/lun1/file
	echo "Done..."
	;;
    disable)
	echo "Disable Mass Storage"
	echo "" > /sys/class/android_usb/android0/f_mass_storage/lun/file
	echo "" > /sys/class/android_usb/android0/f_mass_storage/lun1/file
	echo "Done..."
	;;
    *)
	echo "Usage: mass-storage enable|disable"
	;;
esac